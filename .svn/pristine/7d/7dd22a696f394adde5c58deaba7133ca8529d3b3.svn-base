html,
body,
.wrapper {
  width: 100%;
  height: 100%;
}
body {
  font-family: "Helvetica Neue", Helvetica, "Microsoft Yahei", arial, STHeiTi, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.wrapper {
  padding-top: 64px;
  padding-left: 180px;
  box-sizing: border-box;
  overflow: hidden;
}
/* header */
.header-box {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 64px;
  background-color: #d4372f;
  .header-logo {
    float: left;
    line-height: 64px;
    .header-logo__img {
      padding-left: 20px;
      vertical-align: middle;
    }
  }
  .header-user {
    float: right;
    line-height: 64px;
    font-size: 12px;
    color: #fff;
    &.header-user--info {
      padding-right: 98px;
    }
    &.header-user--help {
      padding-right: 48px;
    }
    .user__img {
      position: absolute;
      top: 20px;
      right: 64px;
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }
  }
}
/* sidebar */
.sidebar-box {
  position: fixed;
  top: 64px;
  left: 0;
  width: 180px;
  bottom: 0;
  & > ul {
    height: 100%;
  }
  img {
    vertical-align: middle;
    margin-right: 10px;
    margin-top: -4px;
  }
}
/* content */
.content-box {
  height: 100%;
  padding: 12px 48px 32px 16px;
  overflow-y: auto;
  box-sizing: border-box;
}
/* tabs */
.tabs-box {
  .el-button {
    margin-top: 5px;
  }
  .el-dropdown {
    margin-top: 10px;
    cursor: pointer;
  }
  .el-tabs--card {
    margin-left: 76px;
    margin-right: 36px;
  }
  .el-tabs__header {
    margin-bottom: 0;
    border-bottom: 1px solid #e5d4d1;
    .el-tabs__nav {
      border: 0;
    }
    .el-tabs__item {
      border-left: 0;
      box-sizing: border-box;
      &.is-active {
        bottom: -1px;
        border: 1px solid #e5d4d1;
        border-bottom-color: #fff;
        border-radius: 4px 4px 0 0;
        background: #fff;
      }
      .el-icon-close {
        font-size: 14px;
      }
    }
  }
}
/* main */
.main-box {
  .nav-title {
    width: 90px;
    height: 90px;
    line-height: 90px;
    margin: 0 auto;
    text-align: center;
    border: 1px solid #000;
    border-radius: 45px;
  }
  .nav-list {
    list-style: none;
  }
  .nav-item {
    width: 140px;
    margin: 20px;
    text-align: center;
  }
  .el-button {
    width: 140px;
    margin-top: 20px;
    margin-left: 0;
  }
}
