/* header */
.header-box {
  position: relative;
  width: 100%;
  height: 70px;
  color: #fff;
  background-color: #d4372f;
  .header-logo {
    float: left;
    width: 180px;
    line-height: 70px;
    .header-logo__img {
      padding-left: 20px;
    }
  }
  .header-user {
    float: right;
    line-height: 70px;
    font-size: 12px;
    color: #fff;
    &.header-user--info {
      padding-right: 98px;
    }
    &.header-user--help {
      padding-right: 48px;
    }
    .user__img {
      position: absolute;
      top: 23px;
      right: 66px;
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }
  }
  .el-button--text {
    color: #fff;
  }
}
/* sidebar */
.sidebar {
  display: block;
  position: absolute;
  width: 180px;
  top: 70px;
  bottom: 0;
  & > ul {
    height: 100%;
  }
  img {
    vertical-align: middle;
    margin-right: 10px;
    margin-top: -4px;
  }
}
.sidebar-popover {
  .el-button {
    display: block;
  }
  .el-button + .el-button {
    margin-left: 0;
  }
}
/* tabs */
.tabs-box {
  .el-button {
    float: left;
    margin-top: 5px;
    margin-right: 16px;
  }
  .el-dropdown {
    float: right;
    margin-top: 10px;
  }
  .el-tabs.el-tabs--card {
    margin-left: 80px;
    margin-right: 40px;
  }
}
/* main */
.main {
  position: absolute;
  top: 80px;
  .navigation {
    margin: auto;
    width: 90px;
    height: 90px;
    text-align: center;
    line-height: 90px;
    border-radius: 45px;
    border: 1px solid #000;
  }
  .uLnav li {
    text-align: center;
    width: 140px;
    float: left;
    list-style: none;
    margin: 20px;
  }
  .aLink {
    color: #fff;
  }
  .uLnav li .el-button {
    width: 140px;
    margin: 20px 0 0 0;
  }
}
